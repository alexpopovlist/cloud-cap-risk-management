          <Label text="Shart Name" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="Cocari" visible="{= ${objectView>/mode} === 'view'}"/>
                <!-- <Input value="Cocari - Cooperative Agropecuaria e Industrial" visible="{= ${objectView>/mode} === 'edit'}"/> -->

          <Label text="Group of Customers" />
          <VBox>
  				      <Text text="COCARI" visible="{= ${objectView>/mode} === 'view'}"/>
                <Input value="COCARI" visible="{= ${objectView>/mode} === 'edit'}"/>
          </VBox>

  				<!-- 2nd column -->
  				<core:Title text=""/>

          <Label text="State" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="PR - Parana" visible="{= ${objectView>/mode} === 'edit'}"/>


          <Label text="Registration Number" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="90334892-58" visible="{= ${objectView>/mode} === 'edit'}"/>

