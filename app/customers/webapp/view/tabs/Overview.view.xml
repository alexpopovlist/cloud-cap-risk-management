              state="Success" />
            <Input value="Active" visible="{= ${objectView>/mode} === 'edit'}"/>
          </VBox>

          <Label text="Suframa Status" visible="{= ${objectView>/mode} === 'view'}"/>
          <ObjectStatus
            visible="{= ${objectView>/mode} === 'view'}"
            text="Active"
            state="Success" />

          <Label text="Managed by" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="G. Renato" visible="{= ${objectView>/mode} === 'view'}"/>

          <Label text="Business codes" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="46.23-1-99" visible="{= ${objectView>/mode} === 'view'}"/>

          <Label text="Legal Form" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="Cooperative" visible="{= ${objectView>/mode} === 'edit'}"/>

  				<!-- 3rd column -->
  				<core:Title text=""/>

          <Label text="Name" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="{LegalInformation/Name}" visible="{= ${objectView>/mode} === 'edit'}"/>

          <Label text="Short Name" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="{LegalInformation/ShortName}" visible="{= ${objectView>/mode} === 'edit'}"/>

      		<!-- <Label text="{i18n>status}" labelFor="idStatusId"/> -->
  				<!-- <Text id="idStatusId" text="to_Status_t/obj_type_Text" /> -->
          <Label text="" visible="{= ${objectView>/mode} === 'view'}"/>
          <VBox class="creditInfoBox" visible="{= ${objectView>/mode} === 'view'}">

            <VBox>
              <Label text="Total Credit Limit" />
              <Title level="H3" text="R$ 1 500 000" />
            </VBox>

            <VBox>
              <Label text="Available Credit Limit" />
              <Title level="H3" text="R$ 1 500 000" />
            </VBox>

            <VBox>
              <Label text="14 open contracts with 3 group customers" />
            </VBox>

          </VBox>

  			</f:content>
  		</f:SimpleForm>

      <f:SimpleForm title="Contacts" maxContainerCols="3" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4"
  					  labelSpanL="4" labelSpanM="4"
  					  emptySpanXL="0" emptySpanL="0" emptySpanM="0" columnsXL="3" columnsL="3" columnsM="3"
  					  columnsS="3" width="100%" adjustLabelSpan="false" class="sapUiMediumMarginBottom">
  			<f:content>
  				<!-- 1st column -->
  				<core:Title text=""/>

          <Label text="Legal Address" visible="{= ${objectView>/mode} === 'view'}" />
  				<Text text="Rua Candido Bastiani, S/N. Brazil, Faxinal, Parque Industrial Gino Zeni 88840-000" maxLines="4" visible="{= ${objectView>/mode} === 'view'}"/>

          <Label text="Primary Phone" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="+55 (69) 3322-3509" visible="{= ${objectView>/mode} === 'edit'}"/>


  				<!-- 2nd column -->
  				<core:Title text=""/>

  				<!-- <Label labelFor="idDurationObj" text="{i18n>durationObjLabel}"/>
  				<Text id="idDurationObj" text="{i18n>durationObjMonthTxt}"/> -->

          <Label text="Primary Phone" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="+55 (69) 3322-3509" visible="{= ${objectView>/mode} === 'view'}"/>

          <Label text="Primary Email" />
          <VBox>
            <Text text="contabilidade@cocari.com.br" visible="{= ${objectView>/mode} === 'view'}" />
            <Input value="contabilidade@cocari.com.br" visible="{= ${objectView>/mode} === 'edit'}"/>
          </VBox>

          <Label text="Email for documents" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="nfe@cocari.com.br" visible="{= ${objectView>/mode} === 'view'}"/>

  				<!-- 3rd column -->
  				<core:Title text=""/>

          <Label text="Email for documents" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="nfe@cocari.com.br" visible="{= ${objectView>/mode} === 'edit'}"/>

  			</f:content>
  		</f:SimpleForm>

      <f:SimpleForm title="Legal address" maxContainerCols="3" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4"
  					  labelSpanL="4" labelSpanM="4"
  					  emptySpanXL="0" emptySpanL="0" emptySpanM="0" columnsXL="3" columnsL="3" columnsM="3"
  					  columnsS="3" width="100%" adjustLabelSpan="false" class="sapUiMediumMarginBottom" visible="{= ${objectView>/mode} === 'edit'}">
  			<f:content>
  				<!-- 1st column -->
  				<core:Title text=""/>

          <Label text="City" visible="{= ${objectView>/mode} === 'edit'}" />
          <Input value="Faxinal" visible="{= ${objectView>/mode} === 'edit'}"/>

          <Label text="Street" visible="{= ${objectView>/mode} === 'edit'}" />
          <Input value="Rua Candido Bastiani" visible="{= ${objectView>/mode} === 'edit'}"/>

          <Label text="Instructions" visible="{= ${objectView>/mode} === 'edit'}" />
          <Input value="" visible="{= ${objectView>/mode} === 'edit'}" placeholder="No special instructions"/>


  				<!-- 2nd column -->
  				<core:Title text=""/>

  				<!-- <Label labelFor="idDurationObj" text="{i18n>durationObjLabel}"/>
  				<Text id="idDurationObj" text="{i18n>durationObjMonthTxt}"/> -->

          <Label text="City district" visible="{= ${objectView>/mode} === 'edit'}" />
          <Input value="Parque Industrial Gino Zeni" visible="{= ${objectView>/mode} === 'edit'}"/>

          <Label text="Number" visible="{= ${objectView>/mode} === 'edit'}" />
          <Input value="S/N" visible="{= ${objectView>/mode} === 'edit'}"/>

  				<!-- 3rd column -->
  				<core:Title text=""/>

          <Label text="ZIP" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="86840-000" visible="{= ${objectView>/mode} === 'edit'}"/>

  			</f:content>
  		</f:SimpleForm>

      <VBox visible="{= ${objectView>/mode} === 'view'}">
        <Title text="Branches" titleStyle="H4"/>
        <Table
  				id="table"
  				width="auto"
  				items="{
  					path: '/LegalInformation',
  					sorter: {
  						path: 'ID',
  						descending: false
  					}
  				}"
  				noDataText="{worklistView>/tableNoDataText}"
  				growing="true"
  				growingScrollToLoad="true"
  				updateFinished=".onUpdateFinished">

  				<headerToolbar>
  					<Toolbar>
  						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
  						<ToolbarSpacer />
  						<SearchField
  							id="searchField"
  							tooltip="{i18n>worklistSearchTooltip}"
  							search=".onSearch"
  							width="auto">
  						</SearchField>
  					</Toolbar>
  				</headerToolbar>

  				<columns>
  					<Column width="20rem">
              	<Text text="Name" />
          	</Column>
          	<Column>
              	<Text text="Tax Identifier" />
          	</Column>
          	<Column>
          			<Text text="Registration Number" />
          	</Column>
  					<Column>
          			<Text text="State" />
          	</Column>
  					<Column>
          			<Text text="City" />
          	</Column>
  					<Column>
          			<Text text="Status" />
          	</Column>
  				</columns>

  				<items>
  					<ColumnListItem
  						type="Navigation"
  						press=".onPress">
  						<cells>
  							<Label design="Bold" text="Cocari - Cooperative Agropecuaria" />
              	<Text text="78.956.968/0035-22" />
                <Text text="108015939" />
  							<Text text="GO" />
                <Text text="GUARDA-MOR" />
  							<ObjectStatus
  								text="Active"
  								state="Success" />
  						</cells>
  					</ColumnListItem>
  				</items>
  			</Table>
      </VBox>

  	</l:VerticalLayout>
	</VBox>
</mvc:View>
