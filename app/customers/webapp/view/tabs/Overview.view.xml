          <ObjectStatus
            text="Active"
            state="Success" visible="{= ${objectView>/mode} === 'view'}"/>

          <Label text="Legal Status" />
          <VBox>
            <ObjectStatus
              visible="{= ${objectView>/mode} === 'view'}"
