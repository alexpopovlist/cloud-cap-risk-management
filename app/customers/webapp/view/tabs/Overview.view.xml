  					  emptySpanXL="0" emptySpanL="0" emptySpanM="0" columnsXL="3" columnsL="3" columnsM="3"
  					  columnsS="3" width="100%" adjustLabelSpan="false">
  			<f:content>
  				<!-- 1st column -->
  				<core:Title text=""/>

          <Label text="Country / State" visible="{= ${objectView>/mode} === 'view'}"/>
  				<Text text="Brazil / PR - Parana" visible="{= ${objectView>/mode} === 'view'}"/>

          <Label text="Registration Country" visible="{= ${objectView>/mode} === 'edit'}"/>
          <Input value="Brazil" visible="{= ${objectView>/mode} === 'edit'}"/>

          <Label text="Tax Identifier" />
          <VBox>
  				      <Text text="78.956.968/0035-22" visible="{= ${objectView>/mode} === 'view'}"/>
                <Input value="78.956.968/0035-22" visible="{= ${objectView>/mode} === 'edit'}"/>
          </VBox>

          <Label text="Registration Number" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="90334892-58" visible="{= ${objectView>/mode} === 'view'}"/>
          <!-- <Input value="90334892-58" visible="{= ${objectView>/mode} === 'edit'}"/> -->

          <Label text="Name" visible="{= ${objectView>/mode} === 'view'}"/>
          <Text text="Cocari - Cooperative Agropecuaria e Industrial" visible="{= ${objectView>/mode} === 'view'}"/>
