<mvc:View
	controllerName="ns.customers.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core">

	<semantic:FullscreenPage
		>

			<!-- <semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading> -->
		<semantic:content>
			<!-- <custom:ETextHover text="FieldDesc"
					allowHover="true"
					hoverIn="onShowAvailabilityInfo"/> -->
			<Table class="sapUiMediumMargin"
				id="table"
				width="auto"
				items="{
					path: '/Customer',
					parameters: {expand: 'LegalInformation'}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column width="22rem">
            	<Text text="Name" />
        	</Column>
        	<Column>
            	<Text text="ShortName" />
        	</Column>
        	<Column>
        			<Text text="Country / State" />
        	</Column>
					<Column>
        			<Text text="CNPJ" />
        	</Column>
					<Column>
        			<Text text="Reg. Number" />
        	</Column>
					<Column>
        			<Text text="Reg. Number" />
        	</Column>
					<Column>
        			<Text text="Economic Group" />
        	</Column>
					<Column>
        			<Text text="Legal" />
        	</Column>
					<Column>
        			<Text text="Commercial" />
        	</Column>
					<Column>
        			<Text text="Finance" />
        	</Column>
					<Column>
        			<Text text="Credit" />
        	</Column>
					<Column>
        			<Text text="Logistics" />
        	</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
							<Label design="Bold" text="{LegalInformation/ShortName}" />
            	<Text text="{LegalInformation/Name}" />
              <Text text="{= ${LegalInformation/RegistrationCountry} + '/ ' + ${LegalInformation/RegistrationState} }" />
							<Text text="{TaxID}" />
							<Text text="{RegNumber}" />
							<Text text="{EconomicGroup}" />
							<ObjectStatus
								text="Active"
								state="Success" />
							<ObjectStatus
								text="{Commercial}"
								state="Success" />
							<ObjectStatus
								text="{Finance}"
								state="Success" />
							<Text text="{Credit}" />
							<Text text="{Logistics}" />
							<!-- <core:Icon
								src="sap-icon://BusinessSuiteInAppSymbols/icon-completed"
								color="#8875E7" >
								<core:layoutData>
									<FlexItemData growFactor="1" />
								</core:layoutData>
							</core:Icon> -->
							<!-- <core:Icon
								src="sap-icon://BusinessSuiteInAppSymbols/icon-completed"
								color="#8875E7" >
								<core:layoutData>
									<FlexItemData growFactor="1" />
								</core:layoutData>
							</core:Icon> -->
							<!-- <core:Icon
								src="sap-icon://BusinessSuiteInAppSymbols/icon-completed"
								color="#8875E7" >
								<core:layoutData>
									<FlexItemData growFactor="1" />
								</core:layoutData>
							</core:Icon> -->

						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<!-- <semantic:saveAction>
			<semantic:SaveAction press="onCreateNewItem"/>
		</semantic:saveAction> -->

		<semantic:customFooterContent>
			<Toolbar>
				<ToolbarSpacer/>
				<Button press="onCreateNewItem"
						text="Create new customer"
						type="Emphasized"/>
			</Toolbar>
		</semantic:customFooterContent>


	</semantic:FullscreenPage>

</mvc:View>
